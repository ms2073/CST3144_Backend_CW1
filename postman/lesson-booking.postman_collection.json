{
  "info": {
    "name": "Lesson Booking API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Lessons",
      "request": {
        "method": "GET",
        "url": {{baseUrl}}"/lessons"
      }
    },
    {
      "name": "Search Lessons",
      "request": {
        "method": "GET",
        "url": {{baseUrl}}"/lessons/search?q=math"
      }
    },
    {
      "name": "Update Lesson",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": {{baseUrl}}"/lessons/:id",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"spaces\": 9\n}"
        }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": {{baseUrl}}"/orders",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"phone\": \"1234567890\",\n  \"lessonIDs\": [\"<lessonId>\"],\n  \"spaces\": 1\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" }
  ]
}


